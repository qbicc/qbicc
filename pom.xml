            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-asm-x86</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- compiler -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-compiler</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- plugins -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-constants</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-conversion</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-correctness</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-dispatch</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-dot</artifactId>
