            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-file-object</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- tools -->

            <dependency>
                <groupId>${project.groupId}</groupId>
