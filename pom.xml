                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-tool-clang</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-tool-gnu</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-tool-llvm</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- VM -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-vm-api</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-vm-implementation</artifactId>
