<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>cc.quarkus</groupId>
    <artifactId>qcc-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>jboss-parent</artifactId>
        <version>36</version>
    </parent>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.release>11</maven.compiler.release>

        <version.info.picocli>4.6.1</version.info.picocli>
        <version.io.smallrye.common>1.4.1</version.io.smallrye.common>
        <version.org.jboss.jandex>2.1.3.Final</version.org.jboss.jandex>
        <version.org.jboss.logging>3.4.1.Final</version.org.jboss.logging>
        <version.org.jboss.logmanager>2.1.17.Final</version.org.jboss.logmanager>
        <version.org.ow2.asm>7.2</version.org.ow2.asm>
    </properties>

    <packaging>pom</packaging>

    <licenses>
        <license>
            <name>GNU General Public License, version 2, with the Classpath Exception</name>
            <url>http://openjdk.java.net/legal/gplv2+ce.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/quarkuscc/qcc</url>
        <connection>scm:git:git://github.com/quarkuscc/qcc</connection>
        <developerConnection>scm:git:git@github.com:quarkuscc/qcc</developerConnection>
    </scm>

    <issueManagement>
        <url>https://github.com/quarkuscc/qcc/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

    <modules>
        <module>compiler</module>
        <module>driver</module>
        <module>interpreter</module>
        <module>main</module>
        <module>machine</module>
        <module>runtime</module>
        <module>plugins</module>
        <module>integration-tests</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <!-- internal -->

            <!-- runtime -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-runtime-api</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-runtime-main</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-runtime-linux</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-runtime-posix</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-runtime-unwind</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- driver -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-driver</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- machine general -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-arch</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-llvm</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-probe</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- file formats -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-file-bin</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-file-elf</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-machine-file-macho</artifactId>
