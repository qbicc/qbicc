            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-linker</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-llvm</artifactId>
