            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-lowering</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-main-method</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>qcc-plugin-native</artifactId>
